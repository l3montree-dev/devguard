{
    "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
        "traits": {
            "required": [
                "email",
                "name",
                "confirmedTerms"
            ],
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "title": "E-Mail",
                    "minLength": 3,
                    "ory.sh/kratos": {
                        "credentials": {
                            "password": {
                                "identifier": true
                            },
                            "passkey": {
                                "display_name": true
                            },
                            "webauthn": {
                                "identifier": true
                            }
                        },
                        "verification": {
                            "via": "email"
                        },
                        "recovery": {
                            "via": "email"
                        }
                    }
                },
                "name": {
                    "type": "object",
                    "properties": {
                        "first": {
                            "title": "First Name",
                            "type": "string"
                        },
                        "last": {
                            "title": "Last Name",
                            "type": "string"
                        }
                    }
                },
                "confirmedTerms": {
                    "type": "boolean",
                    "title": "I agree to the terms of use (devguard.org/terms-of-use)",
                    "description": "You must agree to the terms of use to use this service.",
                    "default": false,
                    "const": true
                }
            }
        }
    }
}