    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/devguard/main.go",
            "args": [],
        },
        {
            "name": "Launch Scanner",
            "type": "go",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/devguard-scanner/main.go",
            "args": [
            "attestations", "registry.opencode.de/open-code/oci/coreutils:1.0.0-rc.3-minimal-amd64"
            ],
        },
        {
            "name": "Launch Server with Prod Database",
            "type": "go",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/devguard/main.go",
            "args": [ ],
            "env": {
                "DISABLE_AUTOMIGRATE": "true",
                "POSTGRES_PORT": "5433"
            }
        },
        {
            "name": "Export Diffs",
            "type": "go",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/devguard-cli/main.go",
            "args": [
                "vulndb",
                "export",
            ],
        }
    ]
}